<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pegi_container"
    android:layout_width="match_parent"
    android:layout_height="43dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:visibility="gone">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/pegi_section"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/pegi_pegi3"
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:adjustViewBounds="true"
                android:layout_marginEnd="5dp"
                android:src="@drawable/ic_pegi_pegi3"
                android:contentDescription="@string/pegi_pegi3"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/pegi_pegi7"
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:adjustViewBounds="true"
                android:layout_marginEnd="5dp"
                android:src="@drawable/ic_pegi_pegi7"
                android:contentDescription="@string/pegi_pegi7"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/pegi_pegi12"
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:adjustViewBounds="true"
                android:layout_marginEnd="5dp"
                android:src="@drawable/ic_pegi_pegi12"
                android:contentDescription="@string/pegi_pegi12"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/pegi_pegi16"
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:adjustViewBounds="true"
                android:layout_marginEnd="5dp"
                android:src="@drawable/ic_pegi_pegi16"
                android:contentDescription="@string/pegi_pegi16"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/pegi_pegi18"
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:adjustViewBounds="true"
                android:layout_marginEnd="5dp"
                android:src="@drawable/ic_pegi_pegi18"
                android:contentDescription="@string/pegi_pegi18"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/pegi_online"
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:adjustViewBounds="true"
                android:layout_marginEnd="5dp"
                android:src="@drawable/ic_pegi_online"
                android:contentDescription="@string/pegi_online"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/pegi_bad_language"
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:adjustViewBounds="true"
                android:layout_marginEnd="5dp"
                android:src="@drawable/ic_pegi_bad_language"
