                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:adjustViewBounds="true"
                android:layout_marginEnd="5dp"
                android:src="@drawable/ic_pegi_discrimination"
                android:contentDescription="@string/pegi_discrimination"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/pegi_drugs"
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:adjustViewBounds="true"
                android:layout_marginEnd="5dp"
                android:src="@drawable/ic_pegi_drugs"
                android:contentDescription="@string/pegi_drugs"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/pegi_fear"
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:adjustViewBounds="true"
                android:layout_marginEnd="5dp"
