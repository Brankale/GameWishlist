                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:adjustViewBounds="true"
                android:layout_marginEnd="5dp"
                android:src="@drawable/ic_pegi_sex"
                android:contentDescription="@string/pegi_sex"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/pegi_violence"
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:adjustViewBounds="true"
                android:layout_marginEnd="5dp"
                android:src="@drawable/ic_pegi_violence"
                android:contentDescription="@string/pegi_violence"
                android:visibility="gone" />

