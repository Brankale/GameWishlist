<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/game_page_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp"
        android:visibility="gone"
        android:animateLayoutChanges="true">

        <ImageView
            android:id="@+id/cover"
            android:layout_width="240dp"
            android:layout_height="300dp"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:contentDescription="@string/game_image"/>

        <LinearLayout
            android:id="@+id/section_prices"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="30dp"/>

        <LinearLayout
            android:id="@+id/promo_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"/>

        <include layout="@layout/partial_section_valid_for_promo"/>
        <include layout="@layout/partial_section_info"/>
        <include layout="@layout/partial_section_pegi"/>
        <include layout="@layout/partial_section_gallery"/>
        <include layout="@layout/partial_section_description"/>

    </LinearLayout>

</ScrollView>